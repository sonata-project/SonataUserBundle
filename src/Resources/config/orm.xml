<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sonata.user.manager.user" class="Sonata\UserBundle\Entity\UserManager" public="false">
            <argument>%sonata.user.user.class%</argument>
            <argument type="service" id="doctrine"/>
        </service>
        <service id="sonata.user.manager.group" class="Sonata\UserBundle\Entity\GroupManager" public="false">
            <argument>%sonata.user.group.class%</argument>
            <argument type="service" id="doctrine"/>
        </service>
    </services>
</container>
