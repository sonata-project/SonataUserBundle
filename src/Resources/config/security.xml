<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sonata.user.security.login_manager.class">Sonata\UserBundle\Security\LoginManager</parameter>
    </parameters>
    <services>
        <service id="sonata.user.security.interactive_login_listener" class="Sonata\UserBundle\EventListener\LastLoginListener">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="sonata.user.user_manager"/>
        </service>
        <service id="sonata.user.security.login_manager" class="%sonata.user.security.login_manager.class%">
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="security.user_checker"/>
            <argument type="service" id="security.authentication.session_strategy"/>
            <argument type="service" id="request_stack"/>
            <!-- remember_me service -->
            <argument>null</argument>
        </service>
        <service id="Sonata\UserBundle\Security\LoginManagerInterface" alias="sonata.user.security.login_manager" public="false"/>
        <service id="sonata.user.user_provider.username" class="Sonata\UserBundle\Security\UserProvider" public="false">
            <argument type="service" id="sonata.user.user_manager"/>
        </service>
        <service id="sonata.user.user_provider.username_email" class="Sonata\UserBundle\Security\EmailUserProvider" public="false">
            <argument type="service" id="sonata.user.user_manager"/>
        </service>
    </services>
</container>
